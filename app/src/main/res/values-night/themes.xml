<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Calculadora" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="NumberButtom">
        <item name="android:background">@color/grisOscuro</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="SymbolButton">
        <item name="android:background">@color/azul</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Separator">
        <item name="android:background">@color/grisClaro</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:elevation">3dp</item>

    </style>
